  const modalPrev = document.getElementById('modal-prev');
  const modalNext = document.getElementById('modal-next');

  const modalOrder = ['refuerzo','implementacion','expertise','flujo','formatos','calidad','valoraciones','valores'];
  let currentKey = null;

  function openModal(key) {
    console.log('Abriendo modal:', key);
    if (!modalData[key]) {
      console.error('Modal no encontrado:', key);
      return;
    }
    currentKey = key;
    modalTexto.innerHTML = `<h2>${modalData[key].titulo}</h2>` + modalData[key].texto;
    modalImg.src = modalData[key].image;
    modal.style.display = 'flex';
  }

  function closeModal() {
    modal.style.display = 'none';
  }

  function navModal(dir) {
    if (!currentKey) return;
    const idx = modalOrder.indexOf(currentKey);
    if (idx === -1) return;
    let nextIdx = idx + dir;
    if (nextIdx < 0) nextIdx = modalOrder.length - 1;
    if (nextIdx >= modalOrder.length) nextIdx = 0;
    openModal(modalOrder[nextIdx]);
  }

  // Enlaces que abren modal
  document.querySelectorAll('[data-modal]').forEach(el => {
    el.addEventListener('click', e => {
      e.preventDefault();
      const key = el.getAttribute('data-modal');
      console.log('Click en modal:', key);
      openModal(key);
    });
  });

  // Cerrar modal
  modalClose.addEventListener('click', closeModal);
  // Flechas
  modalPrev.addEventListener('click', () => navModal(-1));
  modalNext.addEventListener('click', () => navModal(1));
  // Cerrar al hacer clic fuera
  modal.addEventListener('click', e => {
    if (e.target === modal) {
      closeModal();
    }
  });

  // ======================= ACORDE√ìN MOBILE EN SECCIONES =======================
  document.querySelectorAll('.accordion-title-mobile').forEach(title => {
    title.addEventListener('click', function(e) {
      if (window.innerWidth <= 960) {
        console.log('Click en acorde√≥n m√≥vil detectado');
        
        // Si tiene data-target (submen√∫ como SOLUTIONS, M√âTHODOLOGIE)
        if (this.hasAttribute('data-target')) {
          e.preventDefault();
          const target = this.getAttribute('data-target');
          console.log('Abriendo submen√∫:', target);
          if (target) {
            const content = document.getElementById(target);
            if (content) {
              // Cerrar otros acordeones abiertos
              document.querySelectorAll('.accordion-content-mobile').forEach(acc => {
                if (acc !== content) {
                  acc.style.display = 'none';
                  const otherTitle = acc.previousElementSibling;
                  if (otherTitle) otherTitle.classList.remove('active');
                }
              });
              
              // Toggle actual
              this.classList.toggle('active');
              content.style.display = content.style.display === 'block' ? 'none' : 'block';
            }
          }
        }
        // Si tiene data-modal (VALEURS, T√âMOIGNAGES)
        else if (this.hasAttribute('data-modal')) {
          e.preventDefault();
          const modalType = this.getAttribute('data-modal');
          console.log('Abriendo modal desde acorde√≥n:', modalType);
          openModal(modalType);
        }
      }
    });
  });

  // Enlaces dentro del acorde√≥n m√≥vil
  document.querySelectorAll('.accordion-content-mobile a').forEach(link => {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const modalType = this.getAttribute('data-modal');
      console.log('Click en enlace del acorde√≥n:', modalType);
      if (modalType) {
        openModal(modalType);
        // Cerrar el acorde√≥n despu√©s de hacer click
        const accordionContent = this.closest('.accordion-content-mobile');
        if (accordionContent) {
          accordionContent.style.display = 'none';
          const title = accordionContent.previousElementSibling;
          if (title) title.classList.remove('active');
         }
      }
    });
  });

  console.log('Todos los componentes inicializados');
});

  

  // Event listeners for submenu items
  document.querySelectorAll('.submenu a').forEach(link => {
    link.addEventListener('click', function(e) {
      if (window.innerWidth <= 960) {
        // Close all submenus when clicking a submenu item
        document.querySelectorAll('.has-submenu.active').forEach(item => {
          item.classList.remove('active');
        });
        
        // If it's a modal link, open the modal
        if (this.getAttribute('data-modal')) {
          e.preventDefault();
          const key = this.getAttribute('data-modal');
          openModal(key);
        }
      }
    });
  });
  
  // Close submenus when clicking outside on mobile
  document.addEventListener('click', function(e) {
    if (window.innerWidth <= 960) {
      if (!e.target.closest('#main-nav')) {
        document.querySelectorAll('.has-submenu.active').forEach(item => {
          item.classList.remove('active');
        });
      }
    }
  });


</script>

</body>
</html>
